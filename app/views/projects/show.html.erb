<% content_for :title, "Showing project" %>

<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold mb-4"><%= @project.title %></h1>
        <div class="text-gray-600 mb-4"><%= @project.description %></div>
        <div class="flex items-center space-x-2">
          <span class="text-sm text-gray-600">Status:</span>
          <span class="px-2 py-1 text-xs rounded bg-blue-200"><%= @project.status.titleize %></span>
        </div>
      </div>
      <div class="flex gap-2">
        <%= link_to "Edit project", edit_project_path(@project), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
        <%= link_to "Back to projects", projects_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
        <%= button_to "Delete project", @project, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>

  <div class="mb-8">
    <%= render 'events/form' %>
  </div>

  <% if @events.any? %>
    <div class="space-y-4">
      <h2 class="text-xl font-bold mb-4">Activity Feed</h2>
      <%= render partial: 'events/event', collection: @events %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <h2 class="text-xl font-bold mb-4">No activity yet</h2>
      <p class="text-gray-600">Be the first to add an event to this project.</p>
    </div>
  <% end %>

  <div class="mt-6 flex justify-center pb-8">
    <%= will_paginate @events %>
  </div>
</div>
